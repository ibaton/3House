<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionModeOverlay">false</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:itemBackground">@color/background</item>
        <item name="widgetItemBackground">@color/background_card</item>
        <item name="colorBackgroundAccent">@color/colorBackgroundAccent</item>

        <item name="inputBox">@drawable/input_box_light</item>
        <item name="card_style">@style/item_card</item>
        <item name="menu_item_style">@style/menu_item_icon</item>
        <item name="actionbar_style">@style/actionbar_primary</item>
    </style>

    <style name="AppTheme.Base.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="inputBox">@drawable/input_box_dark</item>

        <item name="windowActionModeOverlay">false</item>
        <item name="colorBackgroundAccent">@color/colorBackgroundAccentDark</item>

        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:itemBackground">@color/background_dark</item>
        <item name="widgetItemBackground">@color/background_card_dark</item>

        <item name="card_style">@style/item_card_dark</item>
        <item name="menu_item_style">@style/menu_item_icon_dark</item>
        <item name="actionbar_style">@style/actionbar_dark</item>
    </style>

    <style name="AppTheme.Base.habdroid.Light" parent="AppTheme.Base">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorAccent">#FF5722</item>
        <item name="colorPrimaryDark">#BF360C</item>
    </style>

    <style name="AppTheme.Base.habdroid.Dark" parent="@style/AppTheme.Base.Dark">
        <item name="colorPrimary">#9E9E9E</item>
        <item name="colorAccent">#9E9E9E</item>
        <item name="colorPrimaryDark">#212121</item>
    </style>

</resources>