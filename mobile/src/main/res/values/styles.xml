<resources>

    <style name="CreateServerText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="CreateServerText.Error">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="MenuItemText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">30sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MenuItemTextSmaller" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MenuItemTextSub" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="DescriptionText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuItemSubText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WidgetText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">none</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/transparent_dark</item>
        <item name="android:windowContentOverlay">@color/transparent_dark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"></style>

    <style name="drawer_item_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_card" parent="CardView">
        <item name="cardElevation">@dimen/item_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/background_card</item>
    </style>

    <style name="item_card_dark" parent="CardView">
        <item name="cardElevation">@dimen/item_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/background_card_dark</item>
    </style>

    <style name="menu_item_icon">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="menu_item_icon_dark">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="actionbar_primary">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="actionbar_dark">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="warning_text" parent="TextAppearance.AppCompat.Small">
        <item name="android:background">@color/grey</item>
        <item name="android:padding">@dimen/item_spacing</item>
    </style>

    <style name="menu_icon">
        <item name="android:background">@color/grey</item>
        <item name="android:padding">@dimen/item_spacing</item>
    </style>

    <style name="TextInputLabel">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="TextInput">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/inputBox</item>
    </style>

    <style name="CreateServerCard">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="WidgetImage">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/large_spacing</item>
    </style>
</resources>
