<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_spacing_half"
    android:paddingTop="0dp"
    android:paddingLeft="@dimen/item_spacing_half"
    android:paddingRight="@dimen/item_spacing_half">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="@dimen/button_size_small"
            android:layout_height="@dimen/button_size_small"
            android:id="@+id/btn_up"
            android:text="@string/plus"
            android:layout_weight="1" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/WidgetText"
            android:layout_marginRight="@dimen/item_spacing"
            android:textColor="@color/colorAccent"
            android:text=""
            android:id="@+id/lbl_widget_point"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="@dimen/button_size_small"
            android:layout_height="@dimen/button_size_small"
            android:id="@+id/btn_down"
            android:text="@string/minus"
            android:layout_weight="1" />

    </LinearLayout>

</FrameLayout>